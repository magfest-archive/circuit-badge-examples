{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "magfest",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
	    "transports": [
		{
		    "type": "web",
		    "endpoint": {
			"type": "tcp",
			"port": 8080
		    },
		    "paths": {
			"/": {
			    "type": "static",
			    "directory": "../web"
			},
			"ws": {
			    "type": "websocket"
			}
		    }
		}
            ]
        },
        {
            "type": "guest",
	    "executable": "python",
	    "arguments": ["-m", "example_game"],
	    "options": {
		"workdir": ".."
	    }
        }
    ]
}
